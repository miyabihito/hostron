# see http://editorconfig.org/
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
